<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/wpp11"
    android:orientation="vertical">
    <com.example.anh.itenki.utils.CustomTextView
        android:id="@+id/txAddr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3A5FCD"
        android:text="@string/txt_enter_address"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        />
    <AutoCompleteTextView
        android:layout_marginTop="10dp"
        android:id="@+id/actvAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="3dp"
        android:textSize="22sp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:completionThreshold="1"/>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/btnSeeWeather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:text="@string/btn_seeweather"
        style="@style/button"
        />

    <com.example.anh.itenki.utils.CustomTextView
        android:id="@+id/txAddr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3A5FCD"
        android:text="@string/txt_select_exist_city"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        />

    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/lvJapanCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
